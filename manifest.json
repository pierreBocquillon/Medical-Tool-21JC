{
  "manifest_version": 3,
  "name": "Medical Tool 21JC",
  "version": "1.1.0",
  "description": "Outils d'assistance m√©dicale pour le serveur 21 Jump Click.",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["scripting", "tabs"],
  "action": {
    "default_title": "Medical Form Helper"
  },
  "host_permissions": ["https://intra.21jumpclick.fr/medical/files"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://intra.21jumpclick.fr/medical/files"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["cases.json","icons/128.png", "icons/48.png"],
      "matches": ["<all_urls>"]
    }
  ]
}